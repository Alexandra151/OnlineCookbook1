@model IEnumerable<OnlineCookbook.Models.Recipe>

<h2>Recipes</h2>
<a class="btn btn-primary" asp-action="Create">Add Recipe</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.Description</td>
                <td>
                    @for (int i = 0; i < recipe.Rating; i++)
                    {
                        <span>&#9733;</span>
                    }
                    @for (int i = recipe.Rating; i < 5; i++)
                    {
                        <span>&#9734;</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@recipe.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@recipe.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
