@model IEnumerable<OnlineCookbook.Models.Recipe>

@{
    ViewData["Title"] = "Home";
}

<h2>Welcome to OnlineCookbook</h2>
<p>Discover and share amazing recipes!</p>

<h3>Latest Recipes</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>
                    @for (int i = 0; i < recipe.Rating; i++)
                    {
                        <span>&#9733;</span> 
                    }
                    @for (int i = recipe.Rating; i < 5; i++)
                    {
                        <span>&#9734;</span> 
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
